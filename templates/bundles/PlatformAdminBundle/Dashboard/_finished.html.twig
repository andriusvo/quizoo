{% import '@SyliusUi/Macro/messages.html.twig' as messages %}
{% import '@SyliusUi/Macro/buttons.html.twig' as buttons %}
{% import '@SyliusUi/Macro/labels.html.twig' as labels %}

<h3 class="ui top attached header">{{ 'app.ui.latest_quizzes'|trans }}</h3>
<div class="ui attached segment">
    {% if quizzes|length > 0 %}
        <table class="ui stackable very basic table">
            <thead>
            <th style="color: #ababab;">{{ 'sylius.ui.title'|trans }}</th>
            <th style="color: #ababab;">{{ 'app.ui.subject'|trans }}</th>
            <th></th>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>
                        <strong>{{ quiz.title }}</strong><br>
                    </td>
                    <td>{{ quiz.subject.title }}</td>
                    <td>
                        <div class="ui right floated buttons">
                            {{ buttons.show(path('app_quiz_show', {'id': quiz.id})) }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ messages.info('sylius.ui.no_results_to_display') }}
    {% endif %}
</div>
